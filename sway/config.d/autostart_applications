# authorize polkit-gnome
exec /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# notifications
exec swaync


exec swayidle -w \
  timeout 1800 'playerctl status | grep -q Playing || swaylock \
    --color 001133 \
    --inside-color 001133 \
    --ring-color 003366 \
    --line-color 00000000 \
    --text-color ffffff' \
  timeout 2100 'playerctl status | grep -q Playing || swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"'

